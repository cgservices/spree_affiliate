<%= render :partial => 'spree/admin/shared/sub_menu/configuration' %>

<% content_for :page_title do %>
  <%= t(:affiliates) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_affiliate), new_object_url, :icon => 'icon-plus' %>
  </li>
<% end %>

<%= paginate @affiliates %>

<table class="index">
  <colgroup>
    <col style="width: 40px">
    <col style="width: 175px">
    <col style="width: 200px">
    <col style="width: 50px">
  </colgroup>
  <thead>
    <tr data-hook="affiliates_header">
      <th><%= sort_link @search, :id, t(:id) %></th>
      <th><%= sort_link @search, :name, t(:name) %></th>
      <th><%= sort_link @search, :created_at,  t(:created_at) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @affiliates.each do |affiliate|%>
    <tr id="<%= spree_dom_id affiliate %>" data-hook="affiliate_row" class="<%= cycle('odd', 'even')%>">
      <td class="align-center"><%= affiliate.id %></td>
      <td><%= affiliate.name %></td>
      <td><%= pretty_time(affiliate.created_at)%></td>
      <td class="actions">
        <%= link_to_edit affiliate, :no_text => true %>
        <%= link_to_delete affiliate, :no_text => true %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @affiliates %>
